<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="15dp"
tools:context=".Frouts_items">


<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/fruitImg"
    android:src="@drawable/apple"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/fruitName"
    android:layout_marginHorizontal="10dp"
    android:text="Fruit Name"
    android:textStyle="bold"
    android:textSize="22sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/fruitImg"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:id="@+id/fruitDesc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Fruit details"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/fruitImg"
    app:layout_constraintEnd_toEndOf="@+id/fruitName"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/fruitName"
    app:layout_constraintTop_toBottomOf="@+id/fruitName"
    app:layout_constraintVertical_bias="0.173" />


</androidx.constraintlayout.widget.ConstraintLayout>